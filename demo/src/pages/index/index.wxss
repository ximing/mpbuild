.gift-container .button-disabled {
    width: 622rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx auto 0;
    color: white;
    background-image: linear-gradient(-179deg, #ff5e24 0%, #ff1929 100%);
    box-shadow: 0 8rpx 16rpx 0 rgba(255, 0, 0, 0.22), inset 0 -8rpx 2rpx 0 rgba(226, 0, 0, 0.5);
    border-radius: 56.5rpx;
}
.gift-container .button-disabled::before {
    content: '';
    background: hsla(0, 0%, 100%, 0.5);
    width: 622rpx;
    height: 88rpx;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1;
}
.gift-list {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    margin-top: 75rpx;
    height: 139rpx;
}
.gift-item {
    width: 54rpx;
    // height: 54rpx;
    margin-left: 36rpx;
    position: relative;
}
.gift-type-2 {
    &.gift-1,
    &.gift-2 {
        .gift-img {
            animation: animation 0.3s infinite alternate linear;
        }
    }
}
.gift-item .gift-day {
    position: relative;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #95989e;
    margin-top: 16rpx;
}
.gift-item .current-day {
    color: #ff5640;
}
.gift-item .gift-img {
    width: 54rpx;
    height: 54rpx;
    position: relative;
    z-index: 1;
}
.gift-item::before {
    content: '';
    font-size: 0;
    width: 60rpx;
    height: 8rpx;
    display: inline-block;
    background-color: #f5f5f5;
    position: absolute;
    bottom: 72rpx;
    left: -47rpx;
}
.gift-item:first-child {
    margin-left: 0;
    &::before {
        width: 0;
    }
}
.gift-2 {
    width: 72rpx;
}
.gift-2 .gift-img {
    width: 72rpx;
    height: 90rpx;
}
.gift-1 {
    width: 64rpx;
}

.gift-1 .gift-img {
    width: 64rpx;
    height: 80rpx;
}
.gift-type-3 .gift-day {
}

.gift-type-1,
.gift-type-4 {
    &::before {
        background-color: #ff5640;
    }
}
@keyframes checkin-btn-active {
    0% {
        transform: scale(0.86);
    }
    100% {
        transform: scale(1);
    }
}

.gift-container .checkin-btn-actived {
    width: 622rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx auto 0;
    color: white;
    background-image: linear-gradient(-179deg, #ff5e24 0%, #ff1929 100%);
    box-shadow: 0 8rpx 16rpx 0 rgba(255, 0, 0, 0.22), inset 0 -8rpx 2rpx 0 rgba(226, 0, 0, 0.5);
    border-radius: 56.5rpx;

    animation: checkin-btn-active 0.4s infinite linear alternate-reverse;
    margin-top: 20rpx;
}
.gift-item-tips {
    position: absolute;
    top: -144rpx;
    left: 50%;
    transform: translateX(-50%);
    font-family: PingFangSC-Semibold;
    font-weight:700;
    font-size: 20rpx;
    color: #fff2b3;
    background: #ff5640;
    border-radius: 17px;
    padding: 0 12rpx;
    height: 34rpx;
    white-space: nowrap;
    display: flex;
    align-items: center;
    justify-content: center;
}
.gift-item-tips-arrow {
    width: 10rpx;
    height: 10rpx;
    transform: rotate(45deg) translate(-25%, -25%);
    position: absolute;
    left: 50%;
    margin-left: -5rpx;
    top: 95%;
    background: #ff5640;
}
.gift-item-img-container {
    display: flex;
    align-items: flex-end;

}
