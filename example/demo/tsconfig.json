{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "noImplicitAny": false,
        "declaration": false,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false,
        "allowJs": true,
        "jsx": "preserve",
        "jsxFactory": "Taro.createElement",
        "typeRoots": ["node_modules/@types"],
        "lib": ["esnext"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "compileOnSave": false
}
